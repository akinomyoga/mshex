#!/usr/bin/env bash

declare fRecursive=

declare -a files=()
while (($#)); do
  case "$1" in
  (-r)
    # recursive
    fRecursive=1
    ;;
  ('-?'|--help)
    cat <<EOF
usage: modmod [files...]

OPTIONS
  -r         recursively apply
  -? --help  print help

EOF
    exit 0 ;;
  (-*)
    echo "unknown option '$1'" >&2
    exit 1 ;;
  (*)
    files+=("$1") ;;
  esac
  shift
done

if ((${#files[@]}==0)); then
  if [[ $fRecursive ]]; then
    find
  else
    printf '%s\n' *
  fi
else
  if [[ $fRecursive ]]; then
    find "${files[@]}" | sort -u
  else
    printf '%s\n' "${files[@]}"
  fi
fi | awk '
  /\.(dll|ocx|so|lib|a|la|exe|bat|com|cmd|sh|awk|ws[hf]|vb[es]|hta|tt[fc])~?$/ {
    # jse?
    print "x" $0;
    next;
  }

  /^a,out$/ {
    print "x" $0;
    next;
  }

  /^(.*\/)?[^./]+$/ {
    print "o" $0;
    next;
  }

  {
    print "-" $0;
    next;
  }

  END {
    print "E";
  }
' | {
  declare -a file755=()
  declare -a file644=()

  function add_to_755 {
    file755[${#file755[*]}]=$1;
  }
  
  function add_to_644 {
    file644[${#file644[*]}]=$1;
  }

  while read -r line; do
    mark=${line::1}
    file=${line:1}
    if [[ $mark == E ]]; then
      ((${#file755[@]})) && chmod 755 "${file755[@]}" >/dev/null 2>&1
      ((${#file644[@]})) && chmod 644 "${file644[@]}" >/dev/null 2>&1
    elif [[ $mark == x || -d $file ]]; then
      #echo "755 $line"
      add_to_755 "$file"
    elif [[ $mark == o && ( -f $file || -d $file ) && ( -x $file || ! -r $file ) ]]; then
      declare permission=$(stat -c %a "$file")
      if ((permission==0||permission==777||permission==755)) && [[ ! -h $file ]]; then
        if [[ -d $file || $(head -c 2 "$file" 2>&1) == '#!' ]]; then
          ((permission!=755)) &&
            add_to_755 "$file"
        else
          add_to_644 "$file"
        fi
      fi
    else
      #echo "644 $line"
      add_to_644 "$file"
    fi
  done
}
exit 0

#-------------------------------------------------------------------------------
# old
function old_code {
  if [[ $1 == '' ]]; then
    chmod 644 * >/dev/null 2>&1
    chmod 755 *.{dll,so,lib,a,la,exe,bat,com,sh} >/dev/null 2>&1
    chmod 755 */ >/dev/null 2>&1
  else
    local file
    for file; do
      ext=${file##*.}
      ext_x=$(echo $ext|egrep '^(dll|so|lib|a|la|exe|bat|com|cmd|sh|awk|ws[hf]|jse?|vb[es]|hta)$')
      if [[ -d $file ]]; then
        chmod 755 "$file" >/dev/null 2>&1
      elif [[ $ext == "$ext_x" ]]; then
        chmod 755 "$file" >/dev/null 2>&1
      else
        chmod 644 "$file" >/dev/null 2>&1
      fi
    done
  fi
  exit 0
}

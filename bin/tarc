#!/bin/bash

#
# TODO: *.tar.xz などのアーカイブファイルを除去する設定
#

RAR=/unix/koichi/prog/wrar371j/WinRAR

usage() {
  if [[ ${0:0:1} == '.' ]]; then
    local self=$0
  elif [[ $(type -p "${0##*/}") == "$0" ]]; then
    local self=${0##*/}
  else
    local self=$0
  fi
  
  echo "usage: $self <dstfile> <srcfiles>+"
}

if (($#!=2)); then
  usage >&2
  exit 1
fi

dst=$1
src=$2

if [[ ! $dst ]]; then
  usage >&2
  exit 1
elif [[ $dst == .* && ! -e ${src%/}$dst ]]; then
  dst=${src%/}$dst
fi

if [[ -e $dst ]]; then
  echo "Specified destination file '$dst' does already exist!"
  exit 1
fi

if [[ -x $RAR ]]; then
  case "$dst" in
  (*.exe)
    if [[ -d $src ]]; then
      "$RAR" a -msrar -m5 -s -sfx -r "$@"
    else
      "$RAR" a -msrar -m5 -s -sfx "$@"
    fi
    exit ;;
  (*.rar)
    if [[ -d $src ]]; then
      "$RAR" a -msrar -m5 -s -r "$@"
    else
      "$RAR" a -msrar -m5 -s "$@"
    fi
    exit ;;
  esac
fi

if type tar &>/dev/null; then
  case "$dst" in
  (*.lzma|*.tlz)
    tar --lzma -cvf "$dst" "$src"
    exit ;;
  (*.bz2|*.tbz)
    tar cjvf "$dst" "$src"
    exit ;;
  (*.gz|*.tgz)
    tar czvf "$dst" "$src"
    exit ;;
  (*.xz|*.txz)
    #tar cvf - "$src" | xz -7 > "$dst"
    tar --xz -cvf "$@"
    exit ;;
  esac
fi

if [[ $dst == *.zip ]]; then
  if type zip &>/dev/null; then
    if [[ -d $src ]]; then
      cd "$src"
      [[ $dst != /* ]] && dst=../$dst
      zip -r "$dst" .
    else
      zip "$dst" "$src"
    fi
    exit
  fi
fi


echo 'unknown filetype' >&2
exit 1

#!/bin/bash

#
# TODO: *.tar.xz などのアーカイブファイルを除去する設定
#

function has-command { type "$1" &>/dev/null; }

RAR=
if [[ -x $HOME/opt/wrar371j/WinRAR ]]; then
  RAR=$HOME/opt/wrar371j/WinRAR
elif has-command rar; then
  RAR=rar
fi

usage() {
  if [[ ${0:0:1} == '.' ]]; then
    local self=$0
  elif [[ $(type -p "${0##*/}") == "$0" ]]; then
    local self=${0##*/}
  else
    local self=$0
  fi
  
  echo "usage: $self <dstfile> <srcfiles>+"
}

if (($#!=2)); then
  usage >&2
  exit 1
fi

dst=$1
src=$2

if [[ ! $dst ]]; then
  usage >&2
  exit 1
elif [[ $dst == .* && ! -e ${src%/}$dst ]]; then
  dst=${src%/}$dst
fi

if [[ -e $dst ]]; then
  echo "Specified destination file '$dst' does already exist!"
  exit 1
fi

if [[ $RAR ]]; then
  case "$dst" in
  (*.exe)
    if [[ -d $src ]]; then
      "$RAR" a -msrar -m5 -s -sfx -r "$@"
    else
      "$RAR" a -msrar -m5 -s -sfx "$@"
    fi
    exit ;;
  (*.rar)
    if [[ -d $src ]]; then
      "$RAR" a -msrar -m5 -s -r "$@"
    else
      "$RAR" a -msrar -m5 -s "$@"
    fi
    exit ;;
  esac
fi

if has-command tar; then
  case "$dst" in
  (*.tar.lzma|*.tlz)
    if has-command lzma; then
      tar --lzma -cvf "$dst" "$src"
      exit
    fi ;;
  (*.tar.bz2|*.tbz)
    tar cjvf "$dst" "$src"
    exit ;;
  (*.tar.gz|*.tgz)
    tar czvf "$dst" "$src"
    exit ;;
  (*.tar.xz|*.txz)
    if has-command xz; then
      #tar cvf - "$src" | xz -7 > "$dst"
      tar --xz -cvf "$@"
      exit
    fi ;;
  (*.tar.Z|*.taz)
    if has-command compress; then
      tar cZvf "$dst" "$src"
      exit
    fi ;;
  esac
fi

if [[ $dst == *.zip ]]; then
  if has-command zip; then
    if [[ -d $src ]]; then
      cd "$src"
      [[ $dst != /* ]] && dst=../$dst
      zip -r "$dst" .
    else
      zip "$dst" "$src"
    fi
    exit
  fi
fi

if [[ $dst == *.lzh ]]; then
  if has-command lha; then
    if [[ -d $src ]]; then
      cd "$src"
      [[ $dst != /* ]] && dst=../$dst
      lha co7 "$dst" .
    else
      lha co7 "$dst" "$src"
    fi
    exit
  fi
fi

echo 'unknown filetype' >&2
exit 1

#!/bin/bash

function print-help {
  printf '%s\n' \
         'usage: pass [options]' \
         '' \
         'OPTIONS' \
         '    --edit' \
         '    --help' \
         ''
}

dir=~/.ssh
filename=$dir/passwd.cz2
[[ ! -f $filename && -f $dir/passwd.cz ]] &&
  filename=$dir/passwd.cz

if (($#==0)); then
  czless --passwd "$filename"
elif (($#==1)); then
  case $1 in
  (edit|--edit)
    cz --edit "$filename" ;;
  (--help)
    print-help ;;
  (*)
    print-help
    exit 1 ;;
  esac
else
  print-help
  exit 1
fi
